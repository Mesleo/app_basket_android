<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.javifocus2009gmail.appbasket.nombrarequipos"
    android:background="@drawable/fondo_activity2"
    android:weightSum="4"
    android:id="@+id/linearLayout1"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="Equipo local: "
            android:id="@+id/tvLocal"
            android:layout_weight="0.47"
            android:textSize="20dp"
            android:textColor="#010101" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:maxLength="12"
            android:id="@+id/nomELocal"
            android:layout_weight="1.27"
            android:background="@drawable/estilo_input_nombre_equipo"
            android:alpha="0.8"
            android:ellipsize="start"
            android:paddingLeft="3dp"
            android:paddingRight="3dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:id="@+id/linearLayout3">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Equipo visitante: "
            android:id="@+id/tvVisitante"
            android:layout_weight="0.68"
            android:textSize="20dp"
            android:textColor="#010101" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:maxLength="12"
            android:id="@+id/nomEVisitante"
            android:layout_weight="1.54"
            android:background="@drawable/estilo_input_nombre_equipo"
            android:alpha="0.8"
            android:ellipsize="start"
            android:paddingLeft="3dp"
            android:paddingRight="3dp" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Aceptar"
        android:id="@+id/buttonAceptar"
        android:layout_weight="0.03"
        android:layout_gravity="right" />
</LinearLayout>
